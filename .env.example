# gmweb Docker Compose Configuration
# Copy this file to .env and adjust values as needed
# Values are used by docker-compose.yml for Coolify compatibility

# ============================================================================
# Application Configuration
# ============================================================================

# Compose project name (used for container and volume naming)
COMPOSE_PROJECT_NAME=gmweb

# Coolify deployment metadata
COOLIFY_DEPLOYMENT_ID=
COOLIFY_SERVER_ID=

# ============================================================================
# Service Ports
# ============================================================================

# Kasm web interface (VNC over WebSocket)
KASM_PORT=6901

# SSH access to container
SSH_PORT=22

# Docker daemon port (for DinD - Docker in Docker)
DOCKER_PORT=2375

# ============================================================================
# VNC & Display Configuration
# ============================================================================

# VNC password for web interface access
VNC_PW=password

# Kasm GUAC user ID (UID)
KASM_GUAC_UID=1000

# Kasm GUAC group ID (GID)
KASM_GUAC_GID=1000

# ============================================================================
# Node.js Configuration
# ============================================================================

# Node.js version to use
NODE_VERSION=23.11.1

# ============================================================================
# Claude Code Configuration
# ============================================================================

# Claude API Key (optional, for Claude Code integration)
CLAUDE_API_KEY=

# Claude timeout in seconds
CLAUDE_TIMEOUT=300

# ============================================================================
# Container Configuration
# ============================================================================

# Container user UID:GID
CONTAINER_USER=1000:1000

# Docker restart policy: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped

# ============================================================================
# Resource Limits
# ============================================================================

# CPU limits (cores)
CPU_LIMIT=4
CPU_RESERVED=2

# Memory limits
MEMORY_LIMIT=8g
MEMORY_RESERVED=4g

# ============================================================================
# Volume Configuration
# ============================================================================

# Mount local code directory into container
# Leave empty to disable, or set to absolute path (e.g., /home/user/projects)
CODE_MOUNT_PATH=.

# ============================================================================
# Optional Features
# ============================================================================

# Enable SSH access
ENABLE_SSH=true

# Enable Docker-in-Docker
ENABLE_DIND=true

# Enable ProxyPilot service
ENABLE_PROXYPILOT=true

# ============================================================================
# Coolify-Specific Settings
# ============================================================================

# Enable Coolify monitoring and management
COOLIFY_MANAGED=true

# Coolify health check endpoint
COOLIFY_HEALTH_CHECK_PATH=/api/health

# Coolify expose settings
COOLIFY_EXPOSE_PORT=6901

# ============================================================================
# Network Configuration
# ============================================================================

# Network MTU (Maximum Transmission Unit)
NETWORK_MTU=1450
